{% extends 'base.html.twig' %}

{% block title %}Les recettes{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Liste des recettes</h1>

        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">Titre</th>
                    <th scope="col">Description</th>
                    <th scope="col">Temps de préparation</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for recipe in recipes %}
                <tr>
                    <td>
                        <img src="{{ recipe.image }}" alt="Image de {{ recipe.title }}" class="img-thumbnail" style="max-width: 100px; height: auto;">
                    </td>
                    <td>{{ recipe.title }}</td>
                    <td>{{ recipe.description }}</td>
                    <td>{{ recipe.preparationTime }}</td>
                    <td>
                        <a href="{{ path('app_recipe_show', {'id': recipe.id}) }}" class="btn btn-sm btn-outline-primary mb-1">Voir</a>
                        <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}" class="btn btn-sm btn-outline-warning mb-1">Modifier</a>
                        <a href="{{ path('app_comment_new', {'id': recipe.id}) }}" class="btn btn-sm btn-outline-success mb-1">Ajouter un commentaire</a>
                        {{ include('recipe/_delete_form.html.twig') }} 
                    </td> 
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucune recette trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_recipe_new') }}" class="btn btn-primary mt-3">Créer une nouvelle recette</a>
    </div>
{% endblock %}
