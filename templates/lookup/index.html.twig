{% extends 'base.html.twig' %}

{% block title %}Résultats de recherche{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Résultat de la recherche</h1>
    <h2 class="my-4">Nous avons trouvé les recettes suivantes pour vous</h2>

    {% if recipes is not empty %}
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Image</th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Temps de préparation</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for recipe in recipes %}
                <tr>
                    <td>
                        <img src="{{ recipe.image }}" alt="{{ recipe.title }}" class="img-thumbnail" style="max-width: 100px; height: auto;">
                    </td>
                    <td>{{ recipe.title }}</td>
                    <td>{{ recipe.description }}</td>
                    <td>{{ recipe.preparationTime }}</td>
                    <td>
                        <a href="{{ path('app_recipe_show', {'id': recipe.id}) }}" class="btn btn-sm btn-outline-primary mb-1">Consulter</a>
                        <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}" class="btn btn-sm btn-outline-warning mb-1">Modifier</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
    <div class="alert alert-info text-center" role="alert">
        Aucun article disponible pour ces critères
    </div>
    {% endif %}
</div>
{% endblock %}

