{% extends 'base.html.twig' %}

{% block title %}Les recettes{% endblock %}

{% block body %}
    <h1>Liste des recettes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                {# <th>Image</th> #}
                <th>Title</th>
                <th>Description</th>
                <th>PreparationTime</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td><img class="picture" src="{{ recipe.image }}" alt=""></td>
                {# <td>{{ recipe.image }}</td> #}
                <td>{{ recipe.title }}</td>
                <td>{{ recipe.description }}</td>
                <td>{{ recipe.preparationTime }}</td>
                <td>
                    <a href="{{ path('app_recipe_show', {'id': recipe.id}) }}">show</a>
                    <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">edit</a>
                    <a href="{{ path('app_comment_new', {'id': recipe.id}) }}">Ajouter un commentaire</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_recipe_new') }}">Create new</a>
{% endblock %}
