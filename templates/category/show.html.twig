{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Catégorie : Les {{ category.name }}</h1>

        <table class="table table-bordered mb-5 w-auto">
            <tbody>
                <tr>
                    <th scope="row" style="width: 25%;">Nom</th>
                    <td>Les {{ category.name }}</td>
                </tr>
            </tbody>
        </table>

        <h2 class="mb-3">Recettes associées</h2>
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Image</th>
                        <th scope="col">Titre</th>
                        <th scope="col">Description</th>
                        <th scope="col">Temps de préparation</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for recipe in recipes %}
                    <tr>
                        <td>
                            <img src="{{ recipe.image }}" alt="Image de {{ recipe.title }}" class="img-thumbnail" style="max-width: 100px; height: auto;">
                        </td>
                        <td>{{ recipe.title }}</td>
                        <td>{{ recipe.description }}</td>
                        <td>{{ recipe.preparationTime }}</td>
                        <td>
                            <a href="{{ path('app_recipe_show', {'id': recipe.id}) }}" class="btn btn-sm btn-outline-primary mb-1">Voir</a>
                            {% if is_granted ('ROLE_ADMIN') %}
                                <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}" class="btn btn-sm btn-outline-warning mb-1">Modifier</a>
                            {% endif %}
                            {{ include('recipe/_delete_form.html.twig') }}     
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">Aucune recette trouvée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <a href="{{ path('app_category_index') }}" class="btn btn-secondary mt-4">Retour à la liste</a>

        {{ include('category/_delete_form.html.twig') }}
    </div>
{% endblock %}

