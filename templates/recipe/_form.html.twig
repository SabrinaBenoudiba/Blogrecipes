{{ form_start(form) }}
<div class="container mt-5" style="max-width: 50em;">
    <div class="row justify-content-center">
        <div class="col-md-6">
            {{ form_label(form.title) }}
            {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}

            {{ form_label(form.description) }}
            {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}

            {{ form_label(form.preparationTime) }}
            {{ form_widget(form.preparationTime, { 'attr': {'class': 'form-control'} }) }}

            {{ form_label(form.image) }}
            {{ form_widget(form.image, { 'attr': {'class': 'form-control'} }) }}

            {{ form_label(form.categories) }}
            {{ form_widget(form.categories, { 'attr': {'class': 'form-control'} }) }}

            {{ form_label(form.user) }}
            {{ form_widget(form.user, { 'attr': {'class': 'form-control'} }) }}

            <div class="text-center mt-3 mb-3">
                <button class="btn btn-sm btn-outline-primary">{{ button_label|default('Sauvegarder') }}</button>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}
